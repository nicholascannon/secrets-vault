generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model DotFile {
  id         String     @id @default(uuid())
  userId     String
  name       String
  content    String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now()) @updatedAt
  shareLinks ShareLink?

  @@unique([userId, name])
  @@index([userId, createdAt])
  @@map("dot_files")
}

model ShareLink {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  fileId    String   @unique
  createdAt DateTime @default(now())

  file DotFile @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@map("share_links")
}
